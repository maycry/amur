= semantic_form_for @order, :validate => true do |f| 
  = f.inputs do 
    = f.input :product_id, :as => :hidden
    = f.input :name,  :label => "Имя"
    = f.input :phone, :label => "Телефон"
  / %hr
  / = f.inputs :class => "size" do 
  /   = f.input :bust,  :label => "Обхват груди, см"
  /   = f.input :waist, :label => "талии"
  /   = f.input :heaps, :label => "бедер"
  /   = f.input :waisttofloor, :label => "Длина от талии до пола на каблуках"
  %hr
  = f.buttons do
    = f.commit_button ""
  %hr