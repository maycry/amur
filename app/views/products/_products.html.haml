#products
  -@products.each do |product|
    .product
      = image_tag "instock.png", :class => "instock", :alt => "В наличии" if product.in_stock
      = link_to image_tag(product.productimages.first.image.url(:thumb), :alt => product.articul ),"#", :class => "image"
      .meta
        = product.category.name
        = link_to product.articul